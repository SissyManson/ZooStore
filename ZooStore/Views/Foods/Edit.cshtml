@model ZooStore.ViewModels.Foods.EditVM

@{
    ViewBag.Title = "Edit Foods";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<fieldset>
    <legend>New Food</legend>
    <form action="/Foods/Edit" method="post">
        @Html.HiddenFor(m => m.Id)

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Type)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Type)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Type)
            </div>
        </div>

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Quantity)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Quantity)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Quantity)
            </div>
        </div>

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Price)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Price)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Price)
            </div>
        </div>

        <div style="clear:both">
            <input type="submit" value="Save" />
            <a href="/Foods/Index">Cancel</a>
        </div>
    </form>
</fieldset>