@model ZooStore.ViewModels.PetHomes.EditVM

@{
    ViewBag.Title = "Edit_V_PetHomes";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<fieldset>
    <legend>Add New Pet home</legend>
    <form action="/PetHomes/Edit" method="post">
        @Html.HiddenFor(m => m.Id)

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Type)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Type)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Type)
            </div>
        </div>

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Size)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Size)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Size)
            </div>
        </div>

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Material)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Material)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Material)
            </div>
        </div>

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Price)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Price)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Price)
            </div>
        </div>

        <div style="clear:both">
            <input type="submit" value="Save" />
            <a href="/PetHomes/Index">Cancel</a>
        </div>
    </form>
</fieldset>